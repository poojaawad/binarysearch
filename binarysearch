#include <stdio.h>
int main() {
    int i,num,low,high,mid,a[100],n;
    int found = 0;
    printf("Enter array size ");
    scanf("%d", &n);
    printf("Enter array elements ");
    for(i=0;i<n;i++) {
        scanf("%d", &a[i]);
    }
    printf("Enter the element you want to search ");
    scanf("%d", &num);
    low = 0;
    high = n-1;

    while (low <= high) {
        mid = (low + high) / 2;

        if (num == a[mid]) {
            found = 1; 
            printf("Element %d found at position %d.\n", num, mid);
            break;
        } else if (num < a[mid]) {
            high = mid-1;
        } else {
            low = mid+1;
        }
    }

    if (!found) {
        printf("Number not found\n");
    }
    return 0;
}
